<WelcomeScreen>:
    BoxLayout:
        padding: 30, 30
        orientation: 'vertical'
        spacing: 5
        ImageButton: 
            size_hint: 1, 0.15
            on_press: root.backback()
            source: 'left.png'
            pos_hint: {'center_x': 0.05, 'center_y': 0.4}
        Label:
            size_hint: 1, 0.2  
        Label:
            size_hint: 1, 0.6
            id: about_me_on_welcome_screen
            text_size: self.width, None
            text: "Привет! Меня зовут Денис и это моё первое приложение на Python для Android. Это толковый словарь английского языка с дополнительным переводом слова на русский язык. Словарь в формате json взят из открытых бесплатных источников, поэтому некоторые слова могут в нём отсутствовать."
        Label:
            size_hint: 1, 0.3        
        Image:
            source: 'me.jpg'
        Label:
            size_hint: 1, 0.3
        

<LoginScreenSuccess>:
    BoxLayout:
        orientation: 'vertical'
        padding: 30, 30
        spacing: 20
        ImageButton: 
            size_hint: 1, 0.2
            on_press: root.to_info()
            source: 'info.png'
            pos_hint: {'center_x': 0.95, 'center_y': 0.8}
        Label:
            size_hint: 1, 0.2
            text: "Enter the unknown word"
        TextInput:
            size_hint: 1, 0.2    
            id: unknown
            hint_text: "Man, you'll reach C2"
        Button:
            size_hint: 1, 0.3
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            text: "Find description in Oxford's"
            on_press: root.get_description(root.ids.unknown.text)
        ScrollView:
            Label:
                id: match
                text: ''
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
        Label:
            size_hint: 1, 0.1
            text: "Don't understand the description?"
        Button:
            size_hint: 0.8, 0.2    
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            text: 'Translate into russian'
            on_press: root.get_russian(root.ids.unknown.text)
        Label:
            size_hint: 1, 0.1
            id: match_in_russian
            text: ''


<RootWidget>:
    LoginScreenSuccess:
        name: "login_screen_success"
    WelcomeScreen:
        name: 'welcome_screen'
